Parameterized cursor :

declare
v_dept varchar(20); 
cursor c1(p_dept employee.dept%type) is select * from employee where dept=p_dept;
eid number;
en varchar(50);
sal number;
f_dept varchar(20);
begin
v_dept:='&dept_name';
open c1(v_dept);
loop
fetch c1 into eid, en, sal, f_dept;
exit when c1%NOTFOUND;
dbms_output.put_line(eid||' '||en||' '||sal||' '||f_dept);
end loop;
close c1;
end;
/

