Cursor For Delete operation :

declare 
eid int;
en varchar(50);
sal float;
dept varchar(20);
cursor c1 is select * from employee where salary<=200000 for update;
begin
open c1;
loop
fetch c1 into eid,en,sal,dept;
exit when c1%NOTFOUND;
delete from employee where current of c1;
end loop;
close c1;
end;
/

